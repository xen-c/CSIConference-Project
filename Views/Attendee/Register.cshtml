@model Attendee
@{
    ViewData["Title"] = "Register";
}

<h4>Register</h4>
<p>
    You are not yet registered for the conference.
    Please enter your personal details AND indicate the
    capacity in which you will be attending.
</p>

<form asp-action="Register" method="post">
<div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CapacityId">Capacity</label>
        @*Add drop-down list control here*@
        <select class="form-control" asp-for="CapacityId" asp-items="@ViewBag.Capacities">
            <option value="">--- Select your capacity ---</option>
        </select>
    </div>
    <div class="text-center">
       <button class="btn btn-success" type="submit">Register</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">Return to Home Page</a>
    </div>
</form>
