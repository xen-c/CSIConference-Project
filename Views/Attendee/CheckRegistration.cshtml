@model Attendee
@{
    ViewData["Title"] = "Check Registration";
}

<form asp-action="CheckRegistration" method="post">
    <div class="text-danger">@ViewBag.ErrorMessage</div>
    <div class="mb-3">
        <label class="form-label">Enter your email address:</label>
        <input class="form-control" name="email" type="email"/>
    </div>
    <div class="text-center">
        <button class="btn btn-success" type="submit">Check registration</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">Return to Home Page</a>
    </div>
</form>